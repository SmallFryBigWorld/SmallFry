@bot.command()
async def legithelp(ctx):
    help_text = "**ğŸ§  CoachKev â€“ Legit Commands List**\n\n"
    for command, emoji in commands_data.items():
        help_text += f"!legit{command} â†’ {emoji} Legit {command.capitalize()}\n"
    help_text += "\nâœ… !legitdone â†’ End session ping to all Legit roles"
    help_text += "\nğŸ§  !legithelp â†’ Shows this help message"
    await ctx.send(help_text)

@bot.command()
async def legitdone(ctx):
    mention_list = [role for role in ctx.guild.roles if role.name.startswith("Legit")]
    mentions = " ".join([role.mention for role in mention_list])
    await ctx.send(f"âœ… {ctx.author.mention} has ended their *legit session*. Thanks for helping out!\n{mentions}")

# ====== START BOT + WEB SERVER ======
keep_alive()
bot.run(os.getenv("DISCORD_BOT_TOKEN"))
