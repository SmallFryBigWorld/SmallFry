import os
import discord
from discord.ext import commands
from flask import Flask
from threading import Thread

intents = discord.Intents.default()
intents.message_content = True
intents.guilds = True
intents.members = True

bot = commands.Bot(command_prefix='!', intents=intents)

# ====== FLASK SERVER TO KEEP REPLIT ONLINE ======
app = Flask('')

@app.route('/')
def home():
    return "CoachKev is running!"

def run():
    app.run(host='0.0.0.0', port=8080)

def keep_alive():
    t = Thread(target=run)
    t.start()

# ====== ROLE & COMMAND SETUP ======
roles_data = {
    "ğŸ’°": "Legit Heists",
    "ğŸï¸": "Legit MC",
    "ğŸ¤": "Legit Nightclub",
    "ğŸ«¡": "Legit Missions",
    "ğŸ”«": "Legit Gunrunner",
    "ğŸï¸": "Legit Races",
    "ğŸŸï¸": "Legit Arena",
    "ğŸ‘”": "Legit CEO/Agency",
    "ğŸ˜‡": "Legit Helper",
    "ğŸ¤": "Legit Crew Lobby"
}

commands_data = {
    "heist": "ğŸ’°",
    "mc": "ğŸï¸",
    "nightclub": "ğŸ¤",
    "missions": "ğŸ«¡",
    "gunrunner": "ğŸ”«",
    "ceo": "ğŸ‘”",
    "lobby": "ğŸ¤",
    "races": "ğŸï¸",
    "arena": "ğŸŸï¸",
    "helper": "ğŸ˜‡"
}

base_reminders = (
    "âœ¨ Be polite, ask nicely, and donâ€™t *spam **__OR__** dm*.\n"
    "â— If someone says â€œnoâ€ or â€œnot yetâ€, respect it.\n"
    "ğŸ™ Nobody is obligated to help â€“ being annoying wonâ€™t work."
